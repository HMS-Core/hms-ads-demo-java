<?xml version="1.0" encoding="utf-8"?>
<com.huawei.hms.ads.nativead.NativeView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/native_three_images"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/hiad_10_dp"
        android:orientation="vertical">
        <!-- 广告多媒体视图 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_view_1"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_margin="@dimen/hiad_5_dp"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/image_view_2"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_margin="@dimen/hiad_5_dp"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/image_view_3"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_margin="@dimen/hiad_5_dp"
                android:layout_weight="1"/>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/center_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/hiad_5_dp"
            android:layout_marginEnd="@dimen/hiad_5_dp"
            android:background="#FFFFFF">
            <!-- 广告标题 -->
            <TextView
                android:id="@+id/ad_title"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="4dp"
                android:alpha="1"
                android:textColor="#000000"
                android:textSize="@dimen/hiad_text_13_sp" />
            <!-- 广告来源 -->
            <TextView
                android:id="@+id/ad_source"
                android:layout_width="wrap_content"
                android:layout_height="14dp"
                android:layout_marginTop="28dp"
                android:layout_marginBottom="4dp"
                android:gravity="center_vertical"
                android:alpha="0.6"
                android:maxWidth="132dp"
                android:textColor="#666666"
                android:textSize="@dimen/hiad_text_13_sp" />
            <!-- 广告标识 -->
            <TextView
                android:id="@+id/ad_flag"
                android:layout_width="16dp"
                android:layout_height="14dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="30dp"
                android:layout_toEndOf="@+id/ad_source"
                android:background="@drawable/native_flag_rounded_corners_shape"
                android:gravity="center"
                android:text="@string/ad_flag"
                android:textColor="#FFFFFF"
                android:textSize="8sp"
                android:textStyle="bold" />
            <!-- 广告点击行为按钮 -->
            <Button
                android:id="@+id/ad_call_to_action"
                android:layout_width="72dp"
                android:layout_height="26dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="40dp"
                android:background="@drawable/native_button_rounded_corners_shape"
                android:textColor="#FFFFFF"
                android:textSize="10sp" />
        </RelativeLayout>
    </LinearLayout>
</com.huawei.hms.ads.nativead.NativeView>

